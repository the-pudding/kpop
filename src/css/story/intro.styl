p, a
	color $text-blue
a
	border-color $text-blue

.intro
	margin 0 auto
	padding 6rem 0rem 3rem 0rem
	background-color $pink

	&__tag
		max-width 60rem
		margin 0 auto
		text-align center
		color $text-blue
		font-size 18px
		font-family $national-narrow
		font-weight 500
		width 95%

	&__hed
		max-width 50rem
		margin 0 auto
		text-align center
		color $light-blue
		font-size 55px
		//background-color rgba(52, 78, 165, .9)
		align-self center
		display flex
		line-height 1.3
		font-family $national-narrow
		width 95%

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		width 95%
		max-width 370px

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
		margin-top 5rem
		font-size 16px

	&__time
		//display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__image
		max-width 800px
		margin 0 auto
		text-align center
		background-image url('assets/images/Kpop_top_notext.png')
		background-position center
		background-size contain
		background-repeat no-repeat
		padding-bottom 35%
		display flex
		justify-content center
		align-items center
		margin-bottom 3rem
		@media (max-width: 1000px)
			padding-bottom 50%
		@media (max-width: 500px)
			padding-bottom 75%

#kontinentalist-logo
	max-width 6rem
	position relative
	display inline

#pudding-logo
	max-width 6rem
	position relative
	display inline
