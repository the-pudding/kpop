.legend-wrapper
  .legend-small
    .legend-1
        width 22.882882882882882vw
        width calc(calc(100vw - 100px)*0.253/3)

    .legend-2
        width calc(10.951351351351352vw / 3)
        //width calc(calc(100vw - 100px)*0.253)

    .legend-3
        width calc(2.5233528459334913vw / 3)
        //width calc(calc(100vw - 100px)*0.253)
  .legend-large
    .legend-1
      width 22.882882882882882vw
      width calc(calc(100vw - 100px) * 0.253 * .66)

    .legend-2
      width calc(10.951351351351352vw * .66)

    .legend-3
      width calc(2.5233528459334913vw * .66)


