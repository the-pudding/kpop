/* CUSTOM STORY STYLE */
main
  background-color #FFE6E8
  color #191717

.chart
  max-width 80rem
  margin 0 auto
  padding 0 
  position sticky
  top 10vh

.part2 
  position relative

.step
  margin-bottom 50vh
  &:last-of-type 
    padding-bottom 70vh

#final-group
  background-clip content-box

.overlay
  z-index 1
  position relative
  background-color rgba(255,230,232,.9)
  padding .5rem 1rem .5rem 1rem
  border .05rem solid 


.roles-grid
  width 150%
  margin-left -25%

.side-by-side
  display grid
  grid-template-columns 1fr 1fr 1fr 1fr

#first-role-image
  max-width 75%
  margin auto

#bts-lead
  width 130%
  left 50%
  transform translateX(-15%)
  -webkit-transform translateX(-15%)

.group
  font-weight 700
  font-size 1.7rem

.group-description
  margin-top .4rem
  text-align left

#seniority-label
  color #00CEAC

#rap-label
  color #00C2EF

#vocals-label
  color #AC9BDB

#aesthetics-label
  color #F87F8B

#dance-label
  color #ECBD39

.seniority-wrapper
  border .05rem solid #00CEAC

.rap-wrapper
  border .05rem solid #00C2EF

.vocals-wrapper
  border .05rem solid #AC9BDB

.aesthetics-wrapper
  border .05rem solid #F87F8B

.dance-wrapper
  border .05rem solid #ECBD39

.generation-label
  font-weight 700
  font-size 1.7rem

.generation-description
  margin-top .4rem
  text-align left

#generation-1-label
  color #F0C94E

#generation-2-label
  color #E58B96

#generation-3-label
  color #73BCBD

#supergroups-label
  color #FCA972

#subunits-label
  color #BF216B

#idol-label
  color #262151

.generation-1-wrapper
  border .05rem solid #F0C94E

.generation-2-wrapper
  border .05rem solid #E58B96

.generation-3-wrapper
  border .05rem solid #73BCBD

.supergroups-wrapper
  border .05rem solid #FCA972

.subunits-wrapper
  border .05rem solid #BF216B

.idol-shows-wrapper
  border .05rem solid #262151

