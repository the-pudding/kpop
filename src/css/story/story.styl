/* CUSTOM STORY STYLE */
main
  background-color #FFE6E8
  color #191717

.chart
  max-width 70rem
  margin 0 auto
  padding 0
  position sticky
  top 0px
  height 100vh

  +mq('bp-4')
    top 5vh


  +mq('bp-6')
    top 3vh

.static-chart
  max-width 70rem
  margin 0 auto
  padding 0

#chart3
  height 100vh
  #rankings
    top 50%
    transform translate(0,-50%)
    position absolute

  +mq('bp-4')
    top 5vh


  +mq('bp-6')
    top 3vh

.part2
  position relative

.step
  margin-bottom 70vh
  &:last-of-type
    padding-bottom 70vh
    margin-bottom 0vh

#bars
  height 100vh
  position absolute
  top 0px
  left 0px
  width 100vw
  iframe
    height 100%
    position absolute
    width 100%


#bars-text, #rankings-text
  display flex
  flex-direction column
  max-width 90%
  margin 0 auto

.overlay
  z-index 1
  position relative
  background-color rgba(255,230,232,.9)
  padding .5rem 1rem .5rem 1rem
  border .05rem solid
  max-width 400px

  align-self flex-end

#rankings-text
  .overlay
    align-self center

.roles-grid
  +mq('bp-6')
    width 150%
    margin-left -25%

.side-by-side
  display block
  margin auto
  max-width 90%

  +mq('bp-4')
    display grid
    max-width 90%
    grid-template-columns 1fr 1fr

  +mq('bp-6')
    display grid
    max-width 120%
    grid-template-columns 1fr 1fr 1fr 1fr

#first-role-image-wide
  margin auto
  display none

  +mq('bp-4')
    display block
    max-width 90%

  +mq('bp-6')
    max-width 75%

#first-role-image-long
  margin auto
  display block
  max-width 90%

  +mq('bp-4')
    display none


#bts-lead
  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

#bts-roles
  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

