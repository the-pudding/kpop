/* CUSTOM STORY STYLE */
main
  background-color $pink
  color #191717
  .prose-image
    max-width 60rem
    margin 0 auto

.chart
  margin 0 auto
  padding 0
  position sticky
  top 0px
  height 100vh
  z-index 0
.chart-title
  font-family $national-narrow
  font-weight 600
  color #191717
  text-align center
  line-height 1.2
  //position absolute
  //top 0px
  //left 0px
  z-index 1000
  position relative
  //right 0px
  margin 0 auto

  h2
    margin 0 auto
    @media (max-width: 550px)
      font-size 18px
  .legend-wrapper
    display flex
    justify-content center
    margin-top -4px

.static-chart-title
  position relative
  font-family $national-narrow
  font-weight 600
  color #191717
  margin 0 auto
  width 90%
  max-width 500px

.static-chart
  max-width 70rem
  margin 0 auto
  padding 0

.part2
  position relative

.step
  margin-bottom 70vh
  &:last-of-type
    padding-bottom 70vh
    margin-bottom 0vh

.part3
  padding-top 3rem

#bars
  width 100vw
  height calc(100% - 10px)
  top 10px
  position absolute

#rankings
  max-width 70rem
  margin 0 auto
  left 0px
  right 0px
  top 20px
  position absolute
  height calc(100% - 20px)
  @media (max-height: 650px)
    max-width 850px
    height calc(100% - 50px)




#bars-text, #rankings-text
  display flex
  flex-direction column
  max-width 90%
  margin 0 auto

.overlay
  z-index 1
  position relative
  background-color $pink
  border none
  border-left 3px solid $light-blue
  padding .5rem 2rem .5rem 2rem
  max-width 400px
  box-shadow 3px 5px 11px rgba(27, 6, 94, 0.22)
  align-self flex-end
  transform translate3d(0,0,0)

#rankings-text
  .overlay
    align-self center
    @media (min-width: 1000px)
      margin-left 18rem

.roles-grid
  svg
    width clamp(250px, 25%, 300px)
    @media (max-width: 500px)
      width 90%
    text
      font-family $national-narrow
  .side-by-side
    display block
    margin auto
    width 90%
    display flex
    flex-wrap wrap
    max-width 1200px
    justify-content space-around
    svg
      @media (max-width: 500px)
        margin-bottom 3rem


#first-role-image-wide
  margin auto
  display none
  width 90%
  min-width 40rem
  max-width 800px
  margin-top 3rem

  +mq('bp-4')
    display block

#first-role-image-long
  margin auto
  display block
  @media (max-width: 500px)
    margin-bottom 3rem
  +mq('bp-4')
    display none


#bts-lead
  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

#bts-roles
  +mq('bp-4')
