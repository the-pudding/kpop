.tippy-box[data-theme~='vaporwave']{
  background-color: #262151;
  color: #F89DFC;
  font-family: $national-narrow;
  padding: .4rem;
  text-align: center;
  font-size: 1rem;
  }

.tooltip-highlight, .tooltip-highlight-gif
  color #344EA5
  color $text-blue
  background #fcd3d4
  cursor help

.tooltip-highlight-gif
  cursor help
  position relative
  .mouseover-gif
    display none
    img
      position absolute
      left 0px
      top 2rem
      width 300px

