

/* CUSTOM STORY STYLE */
main
  background-color $pink
  color #191717
  .prose-image
    max-width 60rem
    margin 0 auto

.chart
  margin 0 auto
  padding 0
  position sticky
  top 0px
  height 100vh
  z-index 0

  +mq('bp-4')
    top 5vh


  +mq('bp-6')
    top 3vh

.chart-title
  top 7vh
  position absolute
  left 50px
  font-family $national-narrow
  font-weight 600
  color #191717

.static-chart-title
  position relative
  left 50px
  font-family $national-narrow
  font-weight 600
  color #191717

.static-chart
  max-width 70rem
  margin 0 auto
  padding 0

#chart3
  height 100vh
  #rankings
    top 50%
    transform translate(0,-50%)
    position absolute

  +mq('bp-4')
    top 5vh


  +mq('bp-6')
    top 3vh

.part2
  position relative

.step
  margin-bottom 70vh
  &:last-of-type
    padding-bottom 70vh
    margin-bottom 0vh

#bars
  height 100vh
  position absolute
  top 50%
  transform translate(0,-50%)
  left 0px
  width 100vw
  max-height 700px
  iframe
    height 100%
    position absolute
    width 100%


#bars-text, #rankings-text
  display flex
  flex-direction column
  max-width 90%
  margin 0 auto

.overlay
  z-index 1
  position relative
  background-color $pink
  border none
  border-left 3px solid $light-blue
  padding .5rem 2rem .5rem 2rem
  max-width 400px
  box-shadow 3px 5px 11px rgba(27, 6, 94, 0.22)
  align-self flex-end
  transform translate3d(0,0,0)

#rankings-text
  .overlay
    align-self center

.roles-grid
  .side-by-side
    display block
    margin auto
    width 90%
    display flex
    flex-wrap wrap
    max-width 1200px
    justify-content space-around
    svg
      text
        font-family $national-narrow
      width clamp(250px, 25%, 300px)

#first-role-image-wide
  margin auto
  display none
  width 90%
  min-width 40rem
  max-width 800px
  margin-top 3rem

  +mq('bp-4')
    display block

#first-role-image-long
  margin auto
  display block
  width clamp(250px, 25%, 300px)

  +mq('bp-4')
    display none


#bts-lead
  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

#bts-roles
  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

  +mq('bp-4')
    width 130%
    left 50%
    transform translateX(-15%)
    -webkit-transform translateX(-15%)

